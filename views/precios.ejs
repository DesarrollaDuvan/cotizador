<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Precios</title>
    <script src="javascript/jquery-3.6.1.min.js"></script>
    <script src="javascript/actpred.js"></script>
    <script src="javascript/elimpred.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="style/estilos.css" />
  </head>

  <body>
    <nav class="navbar">
      <img
        src="/images/redes/acemarUS.png"
        class="navbar-brand ms-5"
        alt=""
        width="auto"
        height="70"
      />
      <ul class="nav justify-content-end me-5">
        <li class="nav-item">
          <a class="nav-link text-secondary" href="account">Account</a>
        </li>
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle text-secondary"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Products
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="doors">Doors</a></li>
            <li><a class="dropdown-item" href="productos">Flooring</a></li>
          </ul>
        </li>
        <li class="nav-item">
          <a class="nav-link text-secondary" href="facturas">Invoice</a>
        </li>
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle text-secondary"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Price
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="priceDoor">Doors</a></li>
            <li><a class="dropdown-item" href="precios">Flooring</a></li>
          </ul>
        </li>
        <li class="nav-item">
          <a class="nav-link text-secondary" href="inventario">Inventory</a>
        </li>
        <li class="nav-item">
          <a href="/"
            ><i
              class="fa-solid fa-arrow-right-from-bracket mt-3 ms-3 text-secondary fs-5"
            ></i
          ></a>
        </li>
      </ul>
      <div class="mt-2 linea"></div>
    </nav>
    <form action="/inserprecli" method="post">
      <table class="table">
        <thead>
          <tr>
            <th>Producto</th>
            <th>Layer 1.5 mm</th>
            <th>Layer 3 mm</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>
              <select
                class="form-select form-select-sm"
                aria-label=".form-select-sm example"
                name="producto"
              >
                <% piso.forEach(function (piso) {%>
                <option value="<%= piso.id%>"><%= piso.producto%></option>
                <%})%>
              </select>
            </th>
            <th><input type="text" name="layer1" class="layer1" /></th>
            <th><input type="text" name="layer3" class="layer3" /></th>
          </tr>
        </tbody>
      </table>
      <div class="text-center">
        <button type="submit" class="btn btn-warning mt-3 text-white">
          <i class="fa-solid fa-paper-plane"></i
          ><label class="ms-2">create</label>
        </button>
      </div>
    </form>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Producto</th>
          <th>Layer 1.5 mm</th>
          <th>Layer 3 mm</th>
          <th>Actualizar</th>
          <th>Eliminar</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(function (data) {%>
        <input
          type="hidden"
          value="<%= data.idpisos%>"
          class="idp"
          id="id"
          name="id"
        />
        <tr>
          <td><%= data.producto%></td>
          <td>
            <input
              type="text"
              value="<%= data.layer1%>"
              class="l1"
              id="l1"
              name="l1"
            />
          </td>
          <td>
            <input
              type="text"
              value="<%= data.layer3%>"
              class="l3"
              id="l3"
              name="l3"
            />
          </td>
          <td>
            <button
              type="submit"
              class="ms-3 fs-5 bg-white actu"
              style="border: none"
            >
              <i class="fa-solid fa-wrench text-secondary"></i>
            </button>
          </td>
          <td>
            <button
              type="submit"
              class="ms-3 fs-5 bg-white elimd"
              style="border: none"
            >
              <i class="fa-solid fa-trash text-secondary"></i>
            </button>
          </td>
        </tr>
        <%})%>
      </tbody>
    </table>
    <form action="/precli" method="post">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>id</th>
            <th>User</th>
            <th>Prices</th>
          </tr>
        </thead>
        <tbody>
          <% datos.forEach(function (datos) {if (datos.id>= 4) {%>
          <tr>
            <td><%= datos.id %></td>
            <td><%= datos.mail %></td>
            <td>
              <a href="precli/<%= datos.id %>"
                ><i
                  class="fa-solid fa-hand-holding-dollar text-secondary ms-3 fs-4"
                ></i
              ></a>
            </td>
          </tr>
          <%}})%>
        </tbody>
      </table>
    </form>
  </body>
</html>
