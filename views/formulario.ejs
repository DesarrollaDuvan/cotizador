  </body>
  <script>
    var color = document.getElementById("codcolor").value;
    var finish = document.getElementById("codfinish").value;
    var kerfs = document.getElementById("codkerfs").value;
    var core = document.getElementById("cores").value;
    var venr = document.getElementById("ven").value;
    if (color == "false") {
      document.getElementById("col").id = "sfinsh";
    }
    if (finish == "false") {
      document.getElementById("finsh").id = "sfinsh";
    }
    if (kerfs == "false") {
      document.getElementById("Kerfs").id = "sfinsh";
    }
    if (core == "false") {
      document.getElementById("corese").id = "sfinsh";
    }
    if (venr == "false") {
      document.getElementById("venne").id = "sfinsh";
    }
  </script>
  <script>
    colores.addEventListener("change", () => {
      imgproducto.setAttribute(
        "src",
        "/images/doors/<%= datos.directorio%>/" +
          finihshddd.selectedOptions[0].value +
          colores.selectedOptions[0].value +
          ".jpg"
      );
    });
    finihshddd.addEventListener("change", () => {
      imgproducto.setAttribute(
        "src",
        "/images/doors/<%= datos.directorio%>/" +
          finihshddd.selectedOptions[0].value +
          colores.selectedOptions[0].value +
          ".jpg"
      );
    });
  </script>
  <script>
    elvenner.addEventListener("change", () => {
      imgproducto.setAttribute(
        "src",
        "/images/doors/<%= datos.directorio%>/" +
          elvenner.selectedOptions[0].value +
          ".jpg"
      );
    });
  </script>

