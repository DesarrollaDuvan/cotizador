    <div class="pt-5 ms-auto me-auto mb-5 completo">
      <div class="contenido">
        <div class="foto">
          <% if (datos) { if (cod) { %>
          <input type="hidden" value="<%= datos.codigo%>" id="cod" />
          <input type="hidden" value="<%= cod.inicial%>" id="codinicial" />
          <input type="hidden" value="<%= cod.marco%>" id="codmarco" />
          <input type="hidden" value="<%= cod.color%>" id="codcolor" />
          <input type="hidden" value="<%= cod.finish%>" id="codfinish" />
          <input type="hidden" value="<%= cod.kerfs%>" id="codkerfs" />
          <input type="hidden" value="<%= cod.core%>" id="cores" />
          <input type="hidden" value="<%= cod.veneer%>" id="ven" />
          <input type="hidden" value="<%= datos.conhigth%>" id="chig" />
          <input type="hidden" value="<%= datos.sinhight%>" id="shig" />
          <%}%>
          <img
            class="presentacion mt-4 ms-auto"
            id="imgproducto"
            src="/images/doors/<%= datos.directorio%>/<%= datos.imgpuerta%>"
          />
        </div>
        <div class="container">
          <div class="center">
            <input
              height="300"
              id="mrpuert"
              class="mrpuert"
              type="hidden"
              src="/images/doors/marcos/<%= datos.imgmarco%>"
            />
          </div>
        </div>
        <div class="formulario me-5 pe-5">
          <h5
            style="
              font-weight: bold;
              text-transform: capitalize;
              text-align: center;
            "
          >
            <%= datos.producto%>
          </h5>
          <input
            type="hidden"
            value="<%= datos.imgmarco%>"
            name="marco"
            id="marco"
          />
          <form id="puertas" action="/lista">
            <input
              type="hidden"
              value="<%= datos.id%>"
              name="idpuerta"
              id="idpuerta"
            />
            <input
              type="hidden"
              value="<%= datos.directorio%>/<%= datos.imgpuerta%>"
              name="puerta"
              id="imgpuerta"
            />
            <input
              type="hidden"
              value="<%= datos.producto%>"
              name="nombre"
              id="producto"
            />
            <input
              type="hidden"
              value="<%= datos.finish%>"
              name="acabado"
              id="finish"
            />
            <li class="li-sec caja">
              <label class="label-sec" style="margin-left: 10px">Hight</label>
              <select
                class="form-select form-select-sm selected-line"
                aria-label=".form-select-sm example"
                name="hight"
                id="hight"
              >
                <option selected>Select</option>
                <option value="80">80"</option>
                <option value="84">84"</option>
                <option value="95">95"</option>
                <option value="108">108"</option>
                <option value="120">120"</option>
              </select>
            </li>
            <li class="li-sec caja">
              <label class="label-sec">Width</label>
              <select
                class="form-select form-select-sm selected-line"
                aria-label=".form-select-sm example"
                name="width"
                id="width"
              >
                <option selected>Select</option>
                <option value="24">24"</option>
                <option value="28">28"</option>
                <option value="30">30"</option>
                <option value="32">32"</option>
                <option value="36">36"</option>
              </select>
            </li>
            <li class="li-sec caja">
              <label class="label-sec">Opening</label>
              <select
                class="form-select form-select-sm selected-line"
                aria-label=".form-select-sm example"
                id="opening"
                name="opening"
              >
                <option selected>Select</option>
                <option value="Outside Right">Outside Right</option>
                <option value="Outside Left">Outside Left</option>
              </select>
            </li>
            <li class="li-sec caja" id="corese">
              <label class="label-sec">Core</label>
              <select
                class="form-select form-select-sm selected-line"
                aria-label=".form-select-sm example"
                name="core"
                onchange="marco();"
                id="coreshjgjhg"
              >
                <option value="Solid">Select</option>
                <option value="Honey Comb">Honey Comb</option>
                <option value="Solid">Solid</option>
              </select>
            </li>

            <li class="li-sec caja">
              <label class="label-sec">Frame</label>
              <select
                class="form-select form-select-sm selected-line"
                aria-label=".form-select-sm example"
                id="cbxLenguajes"
                onchange="marco();"
                name="frame"
              >
                <option value="">Select</option>
                <option value="<%= datos.conmarco%>">Yes</option>
                <option value="<%= datos.sinmarco%>">No</option>
                <input
                  type="hidden"
                  value="<%= datos.conmarco%>"
                  id="precio"
                  name="precio"
                />
              </select>
            </li>
            <li class="li-sec caja">
              <label class="label-sec">Thickness</label>
              <select
                class="form-select form-select-sm selected-line"
                aria-label=".form-select-sm example"
                name="Thickness"
                id="Thickness"
              >
                <option selected>Select</option>
                <option value='1"1/2(36mm)'>1"1/2(36mm)</option>
                <option value='1"5/8(42mm)'>1"5/8(42mm)</option>
              </select>
            </li>
            <!--desde aca comienza la generacion de los codigos-->
            <li class="li-sec caja" id="col">
              <label class="label-sec">Color</label>
              <select
                class="form-select form-select-sm selected-line"
                aria-label=".form-select-sm example"
                name="color"
                id="colores"
                onchange="marco();"
                onchange="change();"
              >
                <option value="">Select</option>
                <option value="W1">White</option>
                <option value="G1">Mocca</option>
                <option value="M1">Gray</option>
              </select>
            </li>
            <li class="li-sec caja" id="venne">
              <label class="label-sec">venner</label>
              <select
                class="form-select form-select-sm selected-line"
                aria-label=".form-select-sm example"
                name="venner"
                id="elvenner"
              >
                <option value="">Select</option>
                <option value="-40">Beech Crown</option>
                <option value="-12">Bercy</option>
                <option value="-13">Botzaris</option>
                <option value="-14">Charonne</option>
                <option value="-43">Eucaliptus Crown</option>
                <option value="-17">Jatoba Crown</option>
                <option value="-19">Khaya Crown</option>
                <option value="-15">Light Pale</option>
                <option value="-16">Mont Martre</option>
                <option value="-10">Oak Crown</option>
                <option value="-11">Oak Rift</option>
                <option value="-18">Praia</option>
                <option value="-57">Red Oak Crown</option>
                <option value="-90">Red Oak Rift</option>
                <option value="-20">Roseaux</option>
                <option value="-29">Teak Rift</option>
                <option value="-48">Walnut Crown</option>
                <option value="-37">Walnut Rift</option>
                <option value="-41">White Oak Crown</option>
                <option value="-91">White Oak Rift</option>
              </select>
            </li>
            <li class="li-sec caja" id="Kerfs">
              <label class="label-sec">Kerfs</label>
              <select
                class="form-select form-select-sm selected-line"
                aria-label=".form-select-sm example"
                name="color"
                id="Kerfs"
              >
                <option value="">Select</option>
                <option value="-4k">1K</option>
                <option value="-5k">2K</option>
                <option value="-9k">3K</option>
                <option value="-6k">4K</option>
                <option value="-6k">5K</option>
                <option value="-6k">6K</option>
                <option value="-6k">9K</option>
              </select>
            </li>
            <li class="li-sec caja" id="finsh">
              <label class="label-sec">Finish</label>
              <select
                class="form-select form-select-sm selected-line"
                aria-label=".form-select-sm example"
                name="finish"
                id="finihshddd"
                onchange="marco();"
                onchange="change();"
              >
                <option value="">Select</option>
                <option value="M">matt</option>
                <option value="H">high gloss</option>
              </select>
            </li>
            <!--aca terminan los select del codigo-->
            <li class="li-sec caja">
              <label class="label-sec">Quantity</label>
              <br />
              <input
                class="input-number"
                id="cantidad"
                type="number"
                onchange="marco();"
                value="1"
              />
            </li>
            <div class="linea-total"></div>
            <label class="label-sec total" name="total">Total: </label>
            <span id="lblLenguajeSeleccionado"></span>
            <input
              type="submit"
              value="Add to Quoter"
              id="agregar"
              class="btn btn-warning btn btn-outline-light  ms-5"
            />
            <input
              type="hidden"
              name="juan"
              value="/images/productos/marcos/<%=datos.imgmarco%>"
            />
          </form>
        </div>
      </div>
      <% } %>
    </div>
